.centre
  fill darken(primary-color-1, 40%)
  stroke #0099FF
  stroke-width 0.2

.area
  fill primary-color-1
  fill-opacity .6
  stroke darken(primary-color-1, 40%)
  stroke-width 0.2

.compare-area
  fill primary-color-2
  fill-opacity .6
  stroke darken(primary-color-2, 20%)
  stroke-width 0.3

.area-invalid
  fill #FF0000
  fill-opacity 0.3
  stroke #FF0000
  stroke-width 0.2

.invalid
  color #FF0000

.point
  fill darken(primary-color-1, 40%)

.point-invalid
  fill #FF0000

.axis
  stroke darken(primary-color-2, 20%)
  stroke-width .2

.increment-label
  font-family global-font
  font-size 2px
  fill #666666

.increment-a,.increment-a-outer
  fill rgb(200,200,200)
  fill-opacity 0.3
  stroke rgb(220,220,220)
  stroke-width 0.1

.increment-b, .increment-b-outer
  fill rgb(250,250,250)
  fill-opacity 0.3
  stroke darken(primary-color-1, 70%)
  stroke-width 0.1

.increment-a-outer, .increment-b-outer
  stroke-width 0.5
  stroke rgb(255,255,255)
  fill none

.label
  font-family global-font
  font-size 0.24em
  text-transform uppercase
  fill primary-color-1
  font-weight 400
  

.tooltip-text
  font-family global-font
  font-size 0.25em
  font-weight bold
  text-transform uppercase
  fill black

.tooltip-box
  fill #666666
  fill-opacity 0.6
  stroke #666666
  stroke-width 0.2

svg
  width 100%
  max-height 100%

.half-plot
  width 50%
  float left

.plot
  svg
    height 300px
