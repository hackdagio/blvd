.navbar-login
  width 300px
  padding 15px
  @media(max-width:767px)
    width 100%

.icon-size
  font-size 87px

.navbar-kaizen
  background rgba(255,255,255,0.97)
  border-bottom none
  box-shadow rgba(0,0,0,.1) 0px 1px 1px 0px
  @media(max-width:767px)
    background rgba(255,255,255,1)

.navbar-brand
  img
    height 100%
    max-height 100%

.navbar-toggle
  .icon-bar
    background primary-color-2

.dropdown-menu
  border none
  border-radius 0px
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.17)
  opacity .95

.navbar-notifications
  color primary-color-2

.navbar-notifications-box
  color primary-color-2
  width 300px
  padding 15px 15px 0 15px
  li
    margin 15px 0px
    span
      display block
      word-wrap break-word
  .glyphicon
    height 100%


.navbar-user
  color primary-color-2
.navbar-user-avatar
  width 100%

.navbar-user-info
  line-height 1.75em
  p
    &:nth-child(1)
      color primary-color-2
    &:nth-child(2),
    &:nth-child(3)
      font-size 90%

.navbar-user-link-account
  margin-top 1em

.navbar-user-session
  padding 10px
  padding-bottom 0px
  padding-top 0px

.navbar-logout
  color color-red

.today,
.view-temp // to delete
  font-weight 300
  color darken(primary-color-2,10%)!important

a.sig-menu
  font-weight 300!important