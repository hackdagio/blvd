wrapper-principal-size = 140
wrapper-principal-transitions = all 0.5s ease

#wrapper
  padding-left 0
  transition all 0.5s ease
  &.toggled
    padding-left (wrapper-principal-size)px
    padding-left 0
    #wrapper-sidebar
      width (wrapper-principal-size)px
      width 0
    #wrapper-content
      position absolute
      margin-right -(wrapper-principal-size)px
      position relative
      margin-right 0
      @media(min-width:768px)
        position relative
        margin-right 0
    @media(min-width:768px)
      padding-left 0
  @media(min-width:768px)
    padding-left (wrapper-principal-size)px

#wrapper-sidebar
  z-index 1000
  position fixed
  left (wrapper-principal-size)px
  width 0
  height 100%
  margin-left -(wrapper-principal-size)px
  background sidebar-background-color
  transition all 0.5s ease
  width (wrapper-principal-size)px
  margin-top -20px
  font-weight 300
  @media(max-width:767px)
    width (wrapper-principal-size/2.5)px

#wrapper-content
  @media(max-width:767px)
    padding-left (wrapper-principal-size/2.5)px

.sidebar-nav
  position absolute
  width 100%
  top 0
  margin 0
  padding 0
  list-style none
  li
    width 100%
    text-align center
    margin-top (wrapper-principal-size/15)px
    margin-bottom (wrapper-principal-size/15)px
    padding (wrapper-principal-size/10)px 0
    border-bottom 1px solid rgba(255,255,255,0.2)
    span
      display block
      text-decoration none
      color rgb(255,255,255)
      font-size .9em
      &:hover
        text-decoration none
  & > .sidebar-brand
    font-size 18px
    a
      color rgb(255,255,255)
      &:hover
        text-decoration none
  img
    width 50%

.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none

.kaizen-tiles
  .kaizen-tiles-title
    font-size 1em
    margin 0 0 1em 0
    span
      display inline
      font-weight 300
    .glyphicon-inline
      display inline-block
      vertical-align middle
      margin-right .3em
      color primary-color-2
      font-weight 300
  padding 25px
  margin 0 0 25px 0
  line-height 2em
  overflow hidden
  box-shadow 2px 1px 3px -15px rgba(0,0,0,1)
  border-bottom 3px solid rgba(0, 0, 0, 0.05)
  &.orange
    background rgb(245, 121, 23)
    color white
  &.blue
    background rgb(0,85,159)
    color white
  &.black
    background rgb(30,30,30)
    color white
  &.gray
    background rgb(238,238,238)
    color color-black-gray
  &.red
    background rgb(255,0,0)
    color white
  &.purple
    background rgb(51,0,51)
    color white
  &.fixed
    height 200px
    

.kaizen-kpi
  &.weighted
    color primary-color-1
    .big-kpi
      font-size 3em
    .medium-kpi
      font-size 2em
    .small-kpi
      font-size 1em
  &.diff
    .arrow-kpi-diff
      display inline-block
      margin-right .5em
      &.positive-kpi-change
       color color-green
      &.negative-kpi-change
        color color-red
    .info-kpi-diff
      display inline-block
      color primary-color-2

.ranks 
  margin 1em 0
  padding-right 0
  padding-left 0
  border-bottom 1px solid rgba(255, 255, 255,0.8)
  padding-bottom 1em
  &:last-child
    border-bottom none
    padding-bottom 0
    margin-bottom 0

.rank-position
  color primary-color-1
  float right
  font-size 2.5em

.rank-name
  font-weight 400!important
  color primary-color-1
  font-size 1em

.rank-weighted
  font-weight 400!important
  font-size 1em
  color primary-color-2

.arrow-ranking
  vertical-align middle
  display inline-block
  &.positive
    color color-green
  &.negative
    color color-red

.rank-delta
  color primary-color-2
  margin-left .5em


metrics
  display block