wrapper-principal-size = 140
wrapper-principal-transitions = all 0.5s ease
kaizen-tiles-background-color = color-gray-lighten
kaizen-tiles-text-color = darken(primary-color-2, 10%)
kaizen-positive-color-changes = lighten(color-green, 20%)
kaizen-negative-color-changes = lighten(color-red, 20%)

#wrapper
  padding-left 0
  transition all 0.5s ease
  &.toggled
    padding-left (wrapper-principal-size)px
    padding-left 0
    #wrapper-sidebar
      width (wrapper-principal-size)px
      width 0
    #wrapper-content
      position absolute
      margin-right -(wrapper-principal-size)px
      position relative
      margin-right 0
      @media(min-width:768px)
        position relative
        margin-right 0
    @media(min-width:768px)
      padding-left 0
  @media(min-width:768px)
    padding-left (wrapper-principal-size)px

#wrapper-sidebar
  z-index 1000
  position fixed
  left (wrapper-principal-size)px
  width 0
  height 100%
  margin-left -(wrapper-principal-size)px
  background sidebar-background-color
  transition all 0.5s ease
  width (wrapper-principal-size)px
  margin-top -20px
  font-weight 300
  @media(max-width:767px)
    width (wrapper-principal-size/2.5)px

#wrapper-content
  @media(max-width:767px)
    padding-left (wrapper-principal-size/2.5)px

.sidebar-nav
  position absolute
  width 100%
  top 0
  margin 0
  padding 0
  list-style none
  li
    width 100%
    text-align center
    margin-top (wrapper-principal-size/15)px
    margin-bottom (wrapper-principal-size/15)px
    padding (wrapper-principal-size/10)px 0
    border-bottom 1px solid rgba(255,255,255,0.3)
    span
      display block
      text-decoration none
      color rgb(255,255,255)
      font-size .9em
      &:hover
        text-decoration none
  & > .sidebar-brand
    font-size 18px
    a
      color rgb(255,255,255)
      &:hover
        text-decoration none
  img
    width 50%

.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none

.kaizen-tiles
  padding 20px
  margin -5px -5px 25px -5px
  line-height 2em
  overflow hidden
  border 1px solid rgba(0,0,0,0.05)

  background kaizen-tiles-background-color
  color kaizen-tiles-text-color

  &.h-level-1
    height 12em
  &.h-level-2
    height 10.8em
  &.h-level-3
    height 24em

  .kaizen-tiles-title
    font-size 1em
    margin 0 0 1em 0
    span
      display inline
      font-weight 300
    .glyphicon-inline
      display inline-block
      vertical-align middle
      margin-right .3em
      color primary-color-2
      font-weight 300

.kaizen-kpi
  &.weighted
    color primary-color-1
    letter-spacing -2px
    .big-kpi
      font-size 3em
    .medium-kpi
      font-size 2em
    .small-kpi
      font-size 1em
  &.diff
    .arrow-kpi-diff
      display inline-block
      margin-right .5em
      &.positive-kpi-change
       color kaizen-positive-color-changes
      &.negative-kpi-change
        color kaizen-negative-color-changes
    .info-kpi-diff
      display inline-block
      color primary-color-2

.ranks 
  margin 1em 0
  padding-right 0
  padding-left 0
  border-bottom 1px solid rgba(255, 255, 255,0.8)
  padding-bottom 1em
  &:last-child
    border-bottom none
    padding-bottom 0
    margin-bottom 0

.rank-position
  color primary-color-1
  float right
  font-size 2.5em

.rank-name
  font-weight 400!important
  color primary-color-1
  font-size 1em

.rank-weighted
  font-weight 400!important
  font-size 1em
  color primary-color-2

.arrow-ranking
  vertical-align middle
  display inline-block
  &.positive
    color kaizen-positive-color-changes
  &.negative
    color kaizen-negative-color-changes

.rank-delta
  color primary-color-2
  margin-left .5em

metrics
  display block