@import '../vars'

force-background-color = rgb(245, 245, 245)
kaizen-dashboard-wrapper-principal-size = 125
kaizen-dashboard-wrapper-sidebar-background-color = darken(primary-color-1, 75%)

kaizen-positive-color-changes = color-positive
kaizen-negative-color-changes = color-negative

kaizen-kpi-ok-background-color = color-gray-lighten
kaizen-kpi-ok-text-color = darken(primary-color-2, 10%)

kaizen-kpi-alert-background-color = rgb(208,8,8)
kaizen-kpi-alert-background-image = linear-gradient(to bottom right, rgb(208,8,8) 0%, rgb(180, 8, 8) 100%)
kaizen-kpi-alert-text-color = rgb(255,255,255)

kaizen-kpi-sig-background-image = linear-gradient(to bottom right, primary-color-3 0%, darken(primary-color-2, 10%) 100%)

kaizen-ranking-background-color = rgb(78, 87, 94)
kaizen-ranking-background-image = linear-gradient(to bottom right, #4E575E 0%, #3A4247 100%)
kaizen-ranking-text-color = rgb(216, 216, 216)

kaizen-skills-background-color = rgb(90, 90, 90)
kaizen-skills-background-image = linear-gradient(to bottom right, #5A5A5A 0%, #303030 100%)
kaizen-skills-text-color = rgb(226, 226, 226)

kaizen-history-background-color = kaizen-kpi-ok-background-color
kaizen-history-text-color = kaizen-kpi-ok-text-color

kaizen-radial-kpi-background-color = kaizen-kpi-ok-background-color
kaizen-radial-kpi-text-color = kaizen-kpi-ok-text-color

kaizen-people-ranking-background-color = kaizen-kpi-ok-background-color
kaizen-people-ranking-text-color = kaizen-kpi-ok-text-color

kaizen-latest-news-background-color = rgb(56, 56, 56)
kaizen-latest-news-background-image = linear-gradient(to bottom right, rgb(95, 95, 95) 0%, rgb(38, 50, 52) 100%)
kaizen-latest-news-text-color = rgb(255, 255, 255)

kaizen-self-background-color = kaizen-kpi-ok-background-color
kaizen-self-text-color = kaizen-kpi-ok-text-color

kaizen-feedback-background-color = rgb(90, 90, 90)
kaizen-feedback-background-image = linear-gradient(to bottom right, rgb(90, 90, 90) 0%, rgb(70, 70, 70) 100%)
kaizen-feedback-text-color = rgb(226, 226, 226)

kaizen-user-stories-background-image = linear-gradient(to bottom right, #292323 0%, #171313 100%)
kaizen-user-stories-text-color = rgb(255, 255, 255)

grid-height = 12

avatar-img-border--bold = 3px solid rgb(220, 220, 220)
avatar-img-border--thin = 1px solid rgb(220, 220, 220)

body
  background force-background-color !important
  
.kaizen-dashboard-wrapper
  transition all 0.5s ease
  &.toggled
    padding-left (kaizen-dashboard-wrapper-principal-size)px
    .kaizen-dashboard-wrapper-sidebar
      width (kaizen-dashboard-wrapper-principal-size)px
    .kaizen-dashboard-wrapper-content
      position absolute
      margin-right -(kaizen-dashboard-wrapper-principal-size)px
      @media(min-width:768px)
        position relative
        margin-right 0
    @media(min-width:768px)
      padding-left 0
  // isolated
  &.vp-view
    @media(min-width:768px)
      padding-left (kaizen-dashboard-wrapper-principal-size)px
    .kaizen-dashboard-wrapper-content
      @media(max-width:767px)
        padding-left (kaizen-dashboard-wrapper-principal-size/2.5)px

.kaizen-dashboard-wrapper-sidebar
  z-index 1000
  position fixed
  left (kaizen-dashboard-wrapper-principal-size)px
  width (kaizen-dashboard-wrapper-principal-size)px
  height 100%
  margin-left -(kaizen-dashboard-wrapper-principal-size)px
  background kaizen-dashboard-wrapper-sidebar-background-color
  transition all 0.5s ease
  margin-top -20px //
  @media(max-width:767px)
    width (kaizen-dashboard-wrapper-principal-size/2.5)px
    
  .sidebar-nav
    position absolute
    width 100%
    top 0
    margin 0
    padding 0
    list-style none
    li
      width 100%
      text-align center
      padding (kaizen-dashboard-wrapper-principal-size/10)px 0
      border-top 1px solid lighten(kaizen-dashboard-wrapper-sidebar-background-color, 5%)
      border-bottom 1px solid darken(kaizen-dashboard-wrapper-sidebar-background-color, 90%)
      background darken(kaizen-dashboard-wrapper-sidebar-background-color, 50%)
      span
        display block
        text-decoration none
        color rgb(255,255,255)
        font-size 1em
        text-shadow 0 0 2px rgb(17, 17, 17)
        text-transform uppercase
        font-family alternative-font
        &:hover
          text-decoration none
      &:last-child
        border-bottom none
      a
        color rgb(255,255,255)
        &:hover
          text-decoration none
    .active
        border-left 3px solid primary-color-3
        font-size 110%
    img
      width 50%
  .sidebar-nav li a:active,
  .sidebar-nav li a:focus
    text-decoration none
  
.kaizen-dashboard-wrapper-content
  position absolute

.glyphicon-kpi
  display inline-block
  vertical-align middle
  margin-right .3em
  color inherit
  font-weight 300
  &.right-info
    float right
    margin 0
    button
      border 0
      background none
      outline 0
      padding 1px 1px
.each-glyphicon-container
  margin 1.4em 0 0 0
  span
    display block
    font-size 1.4em
    color primary-color-2


.kaizen-box
  padding 15px
  margin -5px -5px 25px -5px
  line-height 2em
  overflow hidden
  &:not(.without-border)
    border 1px solid rgba(0,0,0,0.06)
  &.full-box
    padding 0
  &.h-level-1
    height (grid-height)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-2
    height 10.8em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-3
    height (grid-height*2)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-4
    height 28em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-5
    height (grid-height + 6)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-6
    height (grid-height + 10)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-7
    height (grid-height - 4)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-8
    height (grid-height + 0.8)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
  &.h-level-9
    height (grid-height + 14)em
    @media(max-width:767px)
      height inherit
    @media(max-width:992px)
      height inherit
      
    
  .kaizen-box-name
    float left
    width 100%
    margin 0
    padding-bottom .5em
    &.normal-size
      font-size 1em
    &.big-size 
      font-size 1.2em
    span
      &:not(.caret)
        display inline
        font-weight 300
        word-wrap break-word
        white-space pre-wrap
      &.caret
        margin-left 5px
      &:not(.glyphicon)
        &:after
          content "_"
  .kaizen-box-content
    float left
    width 100%
    &.overflow-enabled
      overflow scroll
      height 100%
  // .high-margin-top
  //   margin-top 1em
      
.kaizen-self
  background kaizen-self-background-color
  color kaizen-self-text-color
  &#self-coordinador,
  &#self-vp
    .self-info
      display block
    .avatar
      float left
      margin 0 20px 0 0
      img
        height 156px
  &#self-ejecutivo,
  &#self-supervisor
    .self-info
      margin 10px 0 0 0
      display block      
    .avatar
      float left
      margin 20px 30px 0 0
      img
        height 100px
        
  .self-info
    span
      display block
      font-weight 300
      font-family alternative-font
      &.rank-position
        font-size 1.4em
        &.good-rank
          color rgb(40, 121, 1)
        &.bad-rank
          color rgb(208, 8, 8)
        &:before
          content "Conoce tu posici√≥n"
          font-size 60%
      &.who
        font-size 1.6em
        color darken(primary-color-1, 10%)
      &.what
        font-size 1.1em
        color primary-color-2
        margin 0.3em 0 0 0
      &.where
        font-size 1em
        color primary-color-2
  .avatar
    img
      border avatar-img-border--bold
      

        
  .versus
    font-weight 300
        
    .glyphicon
      font-size .8em
    
    .karma-wrapper,
    .karma-glyphicon
      width 100%
      float left
      margin-bottom 3px
    .karma-wrapper
      .karma-title
        margin-bottom -3px
        text-align left
        span
          font-size 1em
          color darken(primary-color-2, 20%)
          text-transform uppercase
          font-family alternative-font
      .karma-box
        height 16px
        float left
        box-shadow inset 0 0 1px rgba(0, 0, 0, 0.1)
        width 100%
        background-color rgb(252, 252, 252) !important
        box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.2)
        span
          font-weight 400
          color white
          font-size .7em
          float left
          margin-top -8.5px
          margin-left 5px
          letter-spacing 1px
        &.karma-asistencia
          background linear-gradient(to right, rgb(255, 61, 61) 0%, lighten(rgb(255, 61, 61), 20%) 75%, rgba(255,255,255, 0) 75%,  rgba(255,255,255, 0) 100%)
        &.karma-capacitacion
          background linear-gradient(to right, rgb(1, 165, 27) 0%, lighten(rgb(1, 165, 27), 20%) 82%, rgba(255,255,255, 0) 82%,  rgba(255,255,255, 0) 100%)
        &.karma-onoff
          background linear-gradient(to right, rgb(215, 163, 0) 0%, lighten(rgb(215, 163, 0), 20%) 93%, rgba(255,255,255, 0) 93%,  rgba(255,255,255, 0) 100%)

    .karma-glyphicon
      &:hover
        opacity 1
        transition all 0.2s ease
      &.mine
        margin-bottom -9px
      &.average
        margin-top -9px
    
    .karma-average
      @media(min-width:992px)
        margin-top 60px
        text-align center
      @media(max-width:991px)
        margin-top 10px
      span
        display block
      .karma-average-value
        font-size 4vh
        letter-spacing -2px
        font-weight 400
      .karma-average-title
        font-size .9em
        font-family alternative-font
        color darken(primary-color-3, 20%)
        line-height 1.2em
        margin-top .4em
        

        

.kaizen-kpi
  &.ok,
  &.neutral
    background kaizen-kpi-ok-background-color
    color kaizen-kpi-ok-text-color
    .weighted
      color primary-color-1
    .diff
      .arrow
        &.positive
          color kaizen-positive-color-changes
        &.negative
          color kaizen-negative-color-changes
      .delta
        color primary-color-2
    &:hover:not(.neutral)
      background darken(kaizen-kpi-ok-background-color, 2%)

  &.red-alert
    background-image kaizen-kpi-alert-background-image
    color kaizen-kpi-alert-text-color
    .weighted
      color kaizen-kpi-alert-text-color
    .diff
      .arrow
        &.positive
          color kaizen-kpi-alert-text-color
        &.negative
          color kaizen-kpi-alert-text-color
      .delta
        color kaizen-kpi-alert-text-color
    .popover-content
      color primary-color-2
    &:hover
      background kaizen-kpi-alert-background-color
  
  &.sig-color
    background-image kaizen-kpi-sig-background-image
    color white
  .kpi
    .weighted
      letter-spacing -2px
    .weighted,
    .kpi-name
      span
        display block
        &.big-size
          font-size 3em
        &.normal-size
          font-size 2em
        &.small-size
          font-size 14px
          font-family alternative-font
    .diff
      .arrow
        display inline-block
        margin-right .5em
      .delta
        display inline-block
        margin-top .5em
        
    .gauge-kpi
      text-align center
      canvas
        max-width 80%
        width auto
        height auto
        max-height 54px
    .kpi-name,
    .kpi-info
      font-weight 300
    .kpi-info
      span
        display inline-block
        &:not(:first-child)
          margin-left .4em

        

      
      

.kaizen-ranking
  background-image kaizen-ranking-background-image
  color kaizen-ranking-text-color
  .ranking
    .rank
      border-bottom 1px solid lighten(kaizen-ranking-background-color, 20%)
      padding 1em 0
      &:first-child
        padding 0 0 1em 0
      .each
        .info
          font-weight 400
          font-size 1em
          a
            color white
            text-decoration none
          span
            color kaizen-ranking-text-color
        .weighted
          font-weight 400
          font-size 1em
          display block
        .arrow
          vertical-align middle
          display inline-block
          &.positive
            color kaizen-positive-color-changes
          &.negative
            color lighten(kaizen-negative-color-changes, 10%)
        .delta
          display block
          color kaizen-ranking-text-color
          vertical-align baseline
          font-weight 300
        .position
          color white
          float right
          font-size 2.5em
          font-weight 300
      &:last-child
        border-bottom none
        
.kaizen-skills
  background-image kaizen-skills-background-image
  color kaizen-skills-text-color
  .skills
    .skill
      &:hover
        a,
        .weighted
          text-shadow 0px 0 10px rgb(255, 255, 255)
      border-bottom 1px solid lighten(kaizen-ranking-background-color, 20%)
      padding 1em 0
      &:first-child
        padding 0 0 1em 0
      .each
        .info
          font-weight 300
          font-size 1em
          a
            color white
            text-decoration none
          span
            color kaizen-ranking-text-color
        .weighted
          font-weight 400
          font-size 1em
          display block
        .arrow
          vertical-align middle
          display inline-block
          &.positive
            color kaizen-positive-color-changes
          &.negative
            color lighten(kaizen-negative-color-changes, 10%)
        .delta
          display block
          color kaizen-ranking-text-color
          vertical-align baseline
          font-weight 300
        .position
          color white
          float right
          font-size 2.5em
          font-weight 300
      &:last-child
        border-bottom none

.kaizen-history
  background kaizen-history-background-color
  color kaizen-history-text-color
  metrics
    display block

.kaizen-radial-kpi
  background kaizen-radial-kpi-background-color
  color kaizen-radial-kpi-text-color
  radial-plot
    svg
      height 85%
      max-height 400px
      
.kaizen-people-ranking
  background kaizen-people-ranking-background-color
  color kaizen-people-ranking-text-color
  .people-ranking
    margin-top 1em
    .each-people
      .people-ranking-avatar
        text-align center
        img
          height 48px
          border avatar-img-border--thin
      .each-name-and-kpi
        h4
          font-weight 400
          margin 0 0 .5em 0
          color darken(primary-color-1, 30%)
          font-family alternative-font
          font-size 1.2em
        .progress
          .progress-bar
            box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.2)
          border-radius 0px
          background rgb(240, 240, 240)
          box-shadow inset 0 1px 4px rgba(0, 0, 0, 0.2)
          i
            font-weight 300
            font-style normal
            color white
            text-shadow 0 1px 10px rgb(0, 0, 0)
            font-size 1.1em
      .each-social-interactions
        margin-top 0.5em
        img
          &.guino
            width 22px
        .glyphicon-inline
          span
            vertical-align top
      

.kaizen-latest-news
  background-image kaizen-latest-news-background-image
  color kaizen-latest-news-text-color
  .latest-news
    margin-top 1em
    .each-news
      font-weight 300
      margin 0 0 1em 0
      float left
      .cover-news
        
        img
          border avatar-img-border--thin
          width 70%
      .guino-news
        img
          max-width 22px

      h2
        font-size 1.3em
        margin 0 0 .5em 0
        letter-spacing -1px
      h5
        font-size .7em
        
        
.kaizen-feedback
  background-image kaizen-feedback-background-image
  color kaizen-feedback-text-color
  .feedback
    .each-feedback
      border-bottom 1px solid lighten(kaizen-ranking-background-color, 20%)
      padding .5em 0
      &:first-child
        padding 0 0 .5em 0
      &:last-child
        border-bottom none
      .feedback-avatar
        text-align center
        img
          &:first-child
            max-width 65px
            width 80%
            border avatar-img-border--thin
          &:last-child
            height 35px
            position absolute
            bottom -7px
            left 25px
      .feedback-text
        line-height 1.4em
        padding-left 30px
        @media(max-width:767px)
          padding-left 40px
        img
          display inline-block
          height 24px
          vertical-align bottom
        blockquote,
        span
          font-weight 300
          display inline
          color white
        blockquote
          font-style italic
          quotes "\201C""\201D""\2018""\2019"
          &:before
            content open-quote
          &:after
            content close-quote
          p
            display inline
        cite
          font-family alternative-font
          font-size 1em
          float left
          width 100%
          color rgb(200,200,200)
      .feedback-icons
        padding-right 10px
        padding-left 0px
        margin-top .3em
        img
          &.guino
            width 22px
          
      .glyphicon-inline
        span
          vertical-align top
    
        
.kaizen-promo-carousel
  width 100%
  margin -20px 0 20px 0
  border-bottom 1px solid rgba(0,0,0,0.06)
  .carousels
    background-position center
    background-size cover
    width 100%
    height 100%
    .carousel
      height 100%
    .carousel-inner
      height 100%
      .item
        height 100%
      img
        height 100%
        width 100%
    .carousel-control
      &.right,
      &.left
        background-image none
    .carousel-indicators
      li
        border 1px solid primary-color-1
        @media(max-width:767px)
          width 5px
          height 5px
      .active
        background primary-color-1
        @media(max-width:767px)
          width 7px
          height 7px

.kaizen-user-stories
  background-image kaizen-user-stories-background-image
  color kaizen-user-stories-text-color
  .user-stories
    margin-top 1em
    .stories-avatar
      text-align center
      img
        max-width 120px
        width 100%
        border avatar-img-border--thin
    .stories-text
      span
        font-weight 300
        &.story-legend
          p
            font-style italic
            font-size 1em
            line-height 1.5em
        &.story-author
          p
            font-weight bold
            font-size .8em


.kaizen-modal-table
  thead,
  tbody
    th
      text-align center
      font-weight 300
      vertical-align bottom!important
  thead
    th
      font-weight 400
      font-size 90%
  .table-kpi-deep-user
    text-align left
    img
      width 30px
      margin-right .5em
      vertical-align middle
    font-weight 300
    font-size 1.2em
    vertical-align middle
    font-family alternative-font
  .table-kpi-deep-weighted
    font-weight 400
  .table-kpi-deep-guino
    img
      width 30px
    .glyphicon-inline
      vertical-align bottom
      height 30px
      font-size 1.2em
      color primary-color-3
  .table-position-not-me
    opacity .5
    transform scale(.95)
    -webkit-filter blur(1px)
    th
      border-top 0
  .table-position-its-me
    color primary-color-1
    th
      border-top 0
    
.kaizen-modal
  .table-position-separator
    text-align center
    float left
    width 100%
    margin -20px 0 20px 0
    span
      color rgb(200, 200, 200)
      font-weight 300
      font-size 2em 