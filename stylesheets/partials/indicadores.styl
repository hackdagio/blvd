wrapper-principal-size = 140

kaizen-positive-color-changes = color-positive
kaizen-negative-color-changes = color-negative

kaizen-sidebar-background-color = darken(primary-color-1, 75%)

kaizen-kpi-ok-background-color = color-gray-lighten
kaizen-kpi-ok-text-color = darken(primary-color-2, 10%)

kaizen-kpi-alert-background-color = rgb(208,8,8)
kaizen-kpi-alert-text-color = rgb(255,255,255)

kaizen-ranking-background-color = rgb(78, 87, 94)
kaizen-ranking-text-color = rgb(216, 216, 216)

kaizen-skills-background-color = rgb(90, 90, 90)
kaizen-skills-text-color = rgb(226, 226, 226)

kaizen-history-background-color = kaizen-kpi-ok-background-color
kaizen-history-text-color = kaizen-kpi-ok-text-color

kaizen-radial-kpi-background-color = kaizen-kpi-ok-background-color
kaizen-radial-kpi-text-color = kaizen-kpi-ok-text-color

kaizen-people-ranking-background-color = kaizen-kpi-ok-background-color
kaizen-people-ranking-text-color = kaizen-kpi-ok-text-color

kaizen-latest-news-background-color = rgb(78, 87, 94)
kaizen-latest-news-text-color = rgb(216, 216, 216)

grid-height = 12

.wrapper
  padding-left 0
  transition all 0.5s ease
  &.toggled
    padding-left (wrapper-principal-size)px
    padding-left 0
    .wrapper-sidebar
      width (wrapper-principal-size)px
      width 0
    .wrapper-content
      position absolute
      margin-right -(wrapper-principal-size)px
      position relative
      margin-right 0
      @media(min-width:768px)
        position relative
        margin-right 0
    @media(min-width:768px)
      padding-left 0
  &:not(.coordinador-view)
    @media(min-width:768px)
      padding-left (wrapper-principal-size)px
    .wrapper-content
      @media(max-width:767px)
        padding-left (wrapper-principal-size/2.5)px
  .wrapper-sidebar
    z-index 1000
    position fixed
    left (wrapper-principal-size)px
    width 0
    height 100%
    margin-left -(wrapper-principal-size)px
    background kaizen-sidebar-background-color
    transition all 0.5s ease
    width (wrapper-principal-size)px
    margin-top -20px
    font-weight 300
    @media(max-width:767px)
      width (wrapper-principal-size/2.5)px
    .sidebar-nav
      position absolute
      width 100%
      top 0
      margin 0
      padding 0
      list-style none
      li
        width 100%
        text-align center
        padding (wrapper-principal-size/10)px 0
        border-top 1px solid lighten(kaizen-sidebar-background-color, 5%)
        border-bottom 1px solid darken(kaizen-sidebar-background-color, 90%)
        background darken(kaizen-sidebar-background-color, 50%)
        span
          display block
          text-decoration none
          color rgb(255,255,255)
          font-size .9em
          text-shadow 0 0 2px rgb(17, 17, 17)
          &:hover
            text-decoration none
        &:last-child
          border-bottom none
      & > .sidebar-brand
        font-size 18px
        a
          color rgb(255,255,255)
          &:hover
            text-decoration none
      .active
          border-left 2px solid primary-color-2
      img
        width 50%
    .sidebar-nav li a:active,
    .sidebar-nav li a:focus
      text-decoration none
  
.glyphicon-kpi
  display inline-block
  vertical-align middle
  margin-right .3em
  color inherit
  font-weight 300
  &.right-info
    float right
    margin 0
    button
      border 0
      background none
      outline 0
      padding 1px 1px
  
.kaizen-box
  padding 20px
  margin -5px -5px 25px -5px
  line-height 2em
  overflow hidden
  border 1px solid rgba(0,0,0,0.06)

  &.h-level-1
    height (grid-height)em
  &.h-level-2
    height 10.8em
  &.h-level-3
    height (grid-height*2)em
  &.h-level-4
    height 28em
    
  .kaizen-box-name
    float left
    width 100%
    margin 0
    padding-bottom .5em
    &.normal-size
      font-size 1em
    &.big-size 
      font-size 1.4em
    span
      display inline
      font-weight 300
      word-wrap break-word
      white-space pre-wrap
      
  .kaizen-box-content
    float left
    width 100%
      
.kaizen-self
  .avatar
    float left
    margin 0 20px 0 0
    img
      height 9.8em
      border 3px solid rgb(220, 220, 220)
  .self-info
    display block
    padding 1.5em 0 0 0
    span
      display block
      font-weight 300
      &.who
        font-size 1.6em
        color darken(primary-color-1, 10%)
        font-family alternative-font
      &.what
        font-size 1.0em
        color darken(primary-color-2, 20%)
        margin .3em 0 0 0
      &.where
        font-size .9em
        color darken(primary-color-2, 20%)

.kaizen-kpi
  &.ok
    background kaizen-kpi-ok-background-color
    color kaizen-kpi-ok-text-color
    .weighted
      color primary-color-1
    .diff
      .arrow
        &.positive
          color kaizen-positive-color-changes
        &.negative
          color kaizen-negative-color-changes
      .delta
        color primary-color-2
  &.red-alert
    background kaizen-kpi-alert-background-color
    color kaizen-kpi-alert-text-color
    .weighted
      color kaizen-kpi-alert-text-color
    .diff
      .arrow
        &.positive
          color kaizen-kpi-alert-text-color
        &.negative
          color kaizen-kpi-alert-text-color
      .delta
        color kaizen-kpi-alert-text-color    
  .kpi
    .weighted
      letter-spacing -2px
      span
        display block
      .big-size
        font-size 3em
      .normal-size
        font-size 2em
      .small-size
        font-size 1em
    .diff
      .arrow
        display inline-block
        margin-right .5em
      .delta
        display inline-block
        margin-top .5em

.kaizen-ranking
  background kaizen-ranking-background-color
  color kaizen-ranking-text-color
  .ranking
    .rank
      border-bottom 1px solid lighten(kaizen-ranking-background-color, 20%)
      padding 1em 0
      &:first-child
        padding 0 0 1em 0
      .each
        .info
          font-weight 400
          font-size 1em
          a
            color white
            text-decoration none
          span
            color kaizen-ranking-text-color
        .weighted
          font-weight 400
          font-size 1em
          display block
        .arrow
          vertical-align middle
          display inline-block
          &.positive
            color kaizen-positive-color-changes
          &.negative
            color lighten(kaizen-negative-color-changes, 10%)
        .delta
          display block
          color kaizen-ranking-text-color
          vertical-align baseline
          font-weight 300
        .position
          color white
          float right
          font-size 2.5em
          font-weight 300
      &:last-child
        border-bottom none
        
.kaizen-skills
  background kaizen-skills-background-color
  color kaizen-skills-text-color
  .skills
    .skill
      border-bottom 1px solid lighten(kaizen-ranking-background-color, 20%)
      padding 1em 0
      &:first-child
        padding 0 0 1em 0
      .each
        .info
          font-weight 300
          font-size 1em
          a
            color white
            text-decoration none
            
          span
            color kaizen-ranking-text-color
        .weighted
          font-weight 400
          font-size 1em
          display block
        .arrow
          vertical-align middle
          display inline-block
          &.positive
            color kaizen-positive-color-changes
          &.negative
            color lighten(kaizen-negative-color-changes, 10%)
        .delta
          display block
          color kaizen-ranking-text-color
          vertical-align baseline
          font-weight 300
        .position
          color white
          float right
          font-size 2.5em
          font-weight 300
      &:last-child
        border-bottom none

.kaizen-history
  background kaizen-history-background-color
  color kaizen-history-text-color
  metrics
    display block

.kaizen-radial-kpi
  background kaizen-radial-kpi-background-color
  color kaizen-radial-kpi-text-color
  radial-plot
    svg
      height 85%
      
.kaizen-people-ranking
  background kaizen-people-ranking-background-color
  color kaizen-people-ranking-text-color
  .rankings
    margin-top 1em
    .each-people
      width 100%
      float left
      .each-avatar
        width 10%
        float left
        margin-right 1em
        img
          width 100%
          border 1px solid rgb(220, 220, 220)
      .each-name-and-kpi
        width 75%
        float left
        h4
          font-weight 400
          margin 0 0 .5em 0
          color primary-color-1
          font-family alternative-font
          font-size 1.2em
        .progress
          border-radius 0px
          background rgb(240, 240, 240)
          i
            font-weight 400
            font-style normal
            color white
            letter-spacing 1px
            text-shadow 0px 1px rgba(0, 0, 0, .7)
      .each-social-interactions
        width 6%
        float left
        .each-glyphicon-container
          margin 1.4em 0 0 1em
          span
            display block
            font-size 1.4em
            color darken(primary-color-2, 15%)

.kaizen-latest-news
  background kaizen-latest-news-background-color
  color kaizen-latest-news-text-color
  .newsfeed
    padding 0 15px
    .news
      font-weight 300
      margin 0 0 1.5em 0
      h2
        font-size 1.3em
        margin 0 0 .5em 0
        color white
      h5
        font-size .9em
        