body,
html
  width 100%
  height 100%

body,
h1,
h2,
h3,
h4,
h5,
h6
  font-family global-font

body
  padding-top (body-distance-from-top)px
  color primary-color-1
  background body-background-color

// bootstrap fixes
.container-fluid
  padding 0 30px
.nopadding
   padding 0 !important
   
// .uppercase
//   text-transform uppercase
// .capitalize
//   text-transform capitalize
  
.progress-bar-success
  background-color color-positive
.progress-bar-info
  background-color color-less-positive
.progress-bar-warning
  background-color color-almost-negative
.progress-bar-danger
  background-color color-negative

.modal-backdrop
  position fixed
  top 0
  right 0
  left 0
  bottom 0
  background-color darken(primary-color-1, 90%)
  
.modal-content
  border none
  border-radius 0px
  box-shadow 0 5px 30px rgb(40,40,40)
  overflow auto
  
.modal-title
  font-weight 300
  color darken(primary-color-2, 10%)
  display inline
  margin-left .5em
  strong
    font-weight 400
  
.modal-footer button
  font-weight 300

.modal.fade .modal-dialog
  transition transform .1s ease-out
  
.modal-body
  color darken(primary-color-1, 50%)
  font-weight 300

.alert,
.btn
  font-weight 300
  border-radius 0px
  font-style italic
  
.btn-primary
  background-color primary-color-2
  border-color lighten(primary-color-2, 10%)
  
.btn-info
  background-color color-less-positive
  
.btn-warning
  background-color color-almost-negative

.btn-success,
.alert-success
  background-color color-positive
  color white
  
.btn-danger,
.alert-danger
  background-color rgb(208, 8, 8)
  border-color rgb(177, 45, 27)
  color white
  
  
.btn-transparent
  background-color rgba(255,255,255,0.1)
  border-color rgba(0,0,0,0.1)
  color rgb(100,100,100)

.form-control
  border-radius 0

// css fixes

.full-width-and-float
  width 100%
  float left
  
.cursor-pointer
  cursor pointer
  
.glyphicon-inline
  display inline-block!important
  

// generic form
form
  .form-control
    &:focus
      border-color rgb(81, 167, 232)
      outline 0
      box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.075),0 0 5px rgba(81, 167, 232, 0.5)
  label
    display block
    color rgb(36, 38, 40)
    font-size 0.9em
    font-weight 400
    margin-bottom 10px
  input
    border 1px solid rgb(224, 223, 215)
    border-radius 0
    box-shadow none
    font-weight 300
  button
    font-weight 300
    font-size 0.8em
    box-shadow none
    border-radius 0