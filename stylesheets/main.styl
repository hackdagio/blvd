body,
html
  width 100%
  height 100%

body,
h1,
h2,
h3,
h4,
h5,
h6
  font-family global-font

body
  padding-top (body-distance-from-top)px
  color primary-color-1
  background rgb(240, 240, 240)

// bootstrap fixes
.btn-primary
  background-color primary-color-1
.container-fluid
  padding 0 30px
.nopadding
   padding 0 !important
.uppercase
  text-transform uppercase
.capitalize
  text-transform capitalize
.progress-bar-success
  background-color color-positive
.progress-bar-info
  background-color color-less-positive
.progress-bar-warning
  background-color color-almost-negative
.progress-bar-danger
  background-color color-negative
  

// kaizen titles

.kaizen-titles
  margin-top 50px
  span
    color primary-color-2
