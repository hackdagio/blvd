.rw-sentence
  margin 0
  text-align center
  text-shadow 1px 1px 1px rgba(255,255,255,0.8)
  span
    font-weight normal
  @media screen and (max-width: 768px)
    font-size 18px
  @media screen and (max-width: 320px)
    font-size 9px

.rw-words-1
  display inline
  text-indent 5px
  span
    position absolute
    opacity 0
    overflow hidden
    color #6b969d
    animation rotateWord 18s linear infinite 0s
    &:nth-child(2)
      animation-delay 3s
      color #6b889d
    &:nth-child(3)
      animation-delay 6s
      color #6b739d
    &:nth-child(4)
      animation-delay 9s
      color #7a6b9d
    &:nth-child(5)
      animation-delay 12s
      color #8d6b9d
    &:nth-child(6)
      animation-delay 15s
      color #9b6b9d

@keyframes rotateWord
  0%
    opacity 0
  2%
    opacity 0
    transform translateY(-30px)
  5%
    opacity 1
    transform translateY(0px)
  17%
    opacity 1
    transform translateY(0px)
  20%
    opacity 0
    transform translateY(30px)
  80%
    opacity 0
  100%
    opacity 0