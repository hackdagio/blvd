@import 'nib'

@import url('https://fonts.googleapis.com/css?family=Open+Sans:400italic,400') // should never be on botto

global-reset()

@import 'login'

@import 'slides'

@import 'navbar'

body,
html
  width 100%
  height 100%

body,
h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Open Sans', sans-serif

body
  padding-top 70px
  color rgb(0, 85, 159)

.btn-primary
  background-color rgb(0,85,159)

.section-heading-spacer
  float left
  width 200px
  border-top 3px solid #e7e7e7

.kaizen-titles
  margin-top 50px
  span
    color rgb(245, 121, 23)

.content-section-a
  background-color #f8f8f8

.content-section-b
  padding 50px 0
  border-top 1px solid #e7e7e7

footer
  padding 50px 0
  background-color #f8f8f8

.text-orange
  color rgb(245, 121, 23)


.row-indicadores
	margin-top 25px

.kaizen-tiles
  padding 25px
  margin 25px 0
  &.orange
    background rgb(245, 121, 23)
    color white
  &.blue
    background rgb(0,85,159)
    color white
  &.black
    background rgba(0,0,0,.8)
    color white

.uppercase
  text-transform uppercase

.dropdown-menu
  border none
  border-radius 0px
  box-shadow 0px 1px 1px rgba(86, 96, 117, 0.15)
  opacity .95

.navbar-notifications
  width 300px
  padding 15px 15px 0 15px
  li
    margin 15px 0px
    span
      display block
      word-wrap break-word
  .glyphicon
    height 100%