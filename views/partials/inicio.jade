div
  div#slides_control(ng-controller='carouselController')
      carousel(interval='interval')
        slide(ng-repeat='slide in slides', active='slide.active')
          img(ng-src='{{slide.image}}')
          .carousel-caption
            h4 imagen {{ $index+1 }}

.content-section-a
  .container
    .row
      .col-lg-5.col-sm-6
        hr.section-heading-spacer
        .clearfix
        h2.section-heading
          | <small>Tus indicadores</small>
          br
          | María Andrea
        p.lead
          | Vendedora
      .col-lg-5.col-lg-offset-2.col-sm-6
        img.img-responsive(src='/demo/avatar/4.jpg', style='width: 50%;', alt='María Andrea')

.content-section-b
  .container
    .row
      div(ng-controller='kpichartsController')
        linechart(data='data', options='options')
      div(ng-controller='kpipieController')
        pie-chart(data='gauge_data', options='gauge_options')