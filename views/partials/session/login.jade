.blvd-login-box
  .modal-dialog.text-center
    .panel-heading
      img(src='http://static.kaizen.link/entel/images/logo-sonrisas-github.svg')
    alert(ng-hide="alert.msg == ''", type='{{alert.type}}') {{ alert.msg }}
    .panel-body
      form.login-to-blvd-form(role='form')
        .form-group
          input#username.form-control(type='username', name='username', data-ng-model='loginData.username', required='', autofocus='true', placeholder='ID')
        .form-group
          input#password.form-control(type='password', name='password', data-ng-model='loginData.password', required='', autocomplete='off', placeholder='Contraseña')
        button.btn.btn-sm.btn-primary.text-uppercase(type='submit', data-ng-click='login()') Entrar
        a(ui-sref='session.request'): button.btn.btn-sm.btn-transparent.text-uppercase Primera vez
