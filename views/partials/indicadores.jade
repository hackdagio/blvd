#wrapper
  #wrapper-sidebar
      .container
        .row
          ul.sidebar-nav
            li.sidebar-brand
              a(href='indicadores/call-center')
                img(src='entel/images/static/call-center.png')
                span.hidden-sm.hidden-xs {{ indicadores.Id }}
            li
              a(href='#')
                img(src='entel/images/static/presencial.png')
                span.hidden-sm.hidden-xs Presencial
            li
              a(href='indicadores/terreno')
                img(src='entel/images/static/terreno.png')
                span.hidden-sm.hidden-xs Terreno
            li
              a(href='indicadores/remoto')
                img(src='entel/images/static/remoto.png')
                span.hidden-sm.hidden-xs Remoto

  #wrapper-content
    .container-fluid
      .row
        .col-md-8
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase General
            .kaizen-kpi.weighted
              span.big-kpi {{ indicadores.Kpi.Ponderado }}
            .kaizen-kpi.diff
              .arrow-kpi-diff.positive-kpi-change
                span.glyphicon.glyphicon-chevron-up
              .info-kpi-diff
                span 700 
                span (+79,84%)
            .fix-linechart
              div(ng-controller='ponderadoController')
                linechart(data='data', options='options')

        .col-md-4
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase Ranking
              .col-xs-12.ranks(data-ng-repeat='rank in ranking')
                .col-xs-4
                  h3.rank-name {{ rank.Id }}
                  span.rank-weighted {{ rank.Ponderado }}
                .col-xs-4
                  .arrow-ranking.positive(ng-if='rank.Id != "SCCP"')
                    span.glyphicon.glyphicon-chevron-up
                  .arrow-ranking.negative(ng-if='rank.Id == "SCCP"')
                    span.glyphicon.glyphicon-chevron-down
                  span.rank-delta {{ rank.Delta }}
                .col-xs-4
                  span.rank-position {{ rank.Posicion }}
                


        .col-md-4
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase Desviación de llamadas
            .kaizen-kpi.weighted
              span.medium-kpi {{ indicadores.Kpi.DesviacionQLlamadas }}
            .kaizen-kpi.diff
              .arrow-kpi-diff.negative-kpi-change
                span.glyphicon.glyphicon-chevron-down
              .info-kpi-diff
                span 700 
                span (+79,84%)

        .col-md-3
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase Nivel de servicio
            .kaizen-kpi.weighted
              span.medium-kpi {{ indicadores.Kpi.NivelServicio }}
            .kaizen-kpi.diff
              .arrow-kpi-diff.negative-kpi-change
                span.glyphicon.glyphicon-chevron-down
              .info-kpi-diff
                span 700 
                span (+79,84%)

        .col-md-3
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase Nivel de atención
            .kaizen-kpi.weighted
              span.medium-kpi {{ indicadores.Kpi.NivelAtencion }}
            .kaizen-kpi.diff
              .arrow-kpi-diff.negative-kpi-change
                span.glyphicon.glyphicon-chevron-down
              .info-kpi-diff
                span 700 
                span (+79,84%)

        .col-md-3
          .kaizen-tiles.gray
            .kaizen-tiles-title
              .glyphicon-inline
                span.glyphicon.glyphicon-asterisk
              span.uppercase TMO
            .kaizen-kpi.weighted
              span.medium-kpi {{ indicadores.Kpi.TMO }}
            .kaizen-kpi.diff
              .arrow-kpi-diff.negative-kpi-change
                span.glyphicon.glyphicon-chevron-down
              .info-kpi-diff
                span 700 
                span (+79,84%)


script.
  $("#menu-toggle").click(function(e) {
  e.preventDefault();
  $("#wrapper").toggleClass("toggled");
  });