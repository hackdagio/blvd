.wrapper.vp-view
  .wrapper-sidebar
      .container
        .row
          ul.sidebar-nav
            li.sidebar-brand.active
              a(href='indicadores/call-center')
                img(src='entel/images/static/call-center.png')
                span.hidden-sm.hidden-xs Contact Center
            li
              a(href='indicadores/allus')
                span Allus
            li
              a(href='indicadores/ecc')
                span ECC
            li
              a(href='indicadores/sccp')
                span SCCP

  .wrapper-content
    .container-fluid
      .row
        // level 1
        .col-lg-8.nopadding

          // sublevel 1
          .col-lg-12.nopadding

            // kpi: general
            .col-md-9
              .kaizen-box.kaizen-kpi.ok.h-level-1
                .col-lg-4
                  .kaizen-box-name.big-size
                    .glyphicon-kpi
                      span.glyphicon.glyphicon-asterisk
                    span.uppercase Total
                  .kpi.kaizen-box-content
                    .weighted
                      span.big-size {{ indicadores.Kpi.Ponderado.Valor }}
                    .diff
                      .arrow.positive
                        span.glyphicon.glyphicon-chevron-up
                      .delta
                        span {{ indicadores.Kpi.Ponderado.Delta }}%
                .col-lg-8(ng-controller='ponderadoController')
                  metrics(ng-if='data', data='data', width='300', height='150', hasxaxis='false', format='percentage', extendedticks='false')

            // kpi: desv q llamadas
            .col-md-3
              .kaizen-box.kaizen-kpi.ok.h-level-1
                .kaizen-box-name
                  .glyphicon-kpi
                    span.glyphicon.glyphicon-asterisk
                  span.uppercase Desv. Llamadas
                  .glyphicon-kpi.right-info
                    button.glyphicon.glyphicon-info-sign(popover-animation='true', popover='{{ indicadores.Kpi.DesviacionQLlamadas.Valor }}')
                .kpi.kaizen-box-content
                  .weighted.text-right
                    span.normal-size {{ indicadores.Kpi.DesviacionQLlamadas.Valor }}
                  .diff.text-right
                    .arrow.negative
                      span.glyphicon.glyphicon-chevron-down
                    .delta
                      span {{ indicadores.Kpi.DesviacionQLlamadas.Delta }}%

          // sublevel 2
          .col-lg-12.nopadding

            // kpi: n.s.
            .col-md-3
              .kaizen-box.kaizen-kpi.red-alert.h-level-2
                .kaizen-box-name
                  .glyphicon-kpi
                    span.glyphicon.glyphicon-asterisk
                  span.uppercase Servicio
                  .glyphicon-kpi.right-info
                    button.glyphicon.glyphicon-info-sign(popover-animation='true', popover='{{ indicadores.Kpi.NivelServicio.Valor }}')
                .kpi.kaizen-box-content
                  .weighted.text-right
                    span.normal-size {{ indicadores.Kpi.NivelServicio.Valor }}
                  .diff.text-right
                    .arrow.positive
                      span.glyphicon.glyphicon-chevron-up
                    .delta
                      span {{ indicadores.Kpi.NivelServicio.Delta }}%

            // kpi: n.a.
            .col-md-3
              .kaizen-box.kaizen-kpi.red-alert.h-level-2
                .kaizen-box-name
                  .glyphicon-kpi
                    span.glyphicon.glyphicon-asterisk
                  span.uppercase Atención
                  .glyphicon-kpi.right-info
                    button.glyphicon.glyphicon-info-sign(popover-animation='true', popover='{{ indicadores.Kpi.NivelAtencion.Valor }}')
                .kpi.kaizen-box-content
                  .weighted.text-right
                    span.normal-size {{ indicadores.Kpi.NivelAtencion.Valor }}
                  .diff.text-right
                    .arrow.positive
                      span.glyphicon.glyphicon-chevron-up
                    .delta
                      span {{ indicadores.Kpi.NivelAtencion.Delta }}%

            // kpi: epa
            .col-md-3
              .kaizen-box.kaizen-kpi.ok.h-level-2
                .kaizen-box-name
                  .glyphicon-kpi
                    span.glyphicon.glyphicon-asterisk
                  span.uppercase EPA
                  .glyphicon-kpi.right-info
                    button.glyphicon.glyphicon-info-sign(popover-animation='true', popover='{{ indicadores.Kpi.EPA.Valor }}')
                .kpi.kaizen-box-content
                  .weighted.text-right
                    span.normal-size {{ indicadores.Kpi.EPA.Valor }}
                  .diff.text-right
                    .arrow.positive
                      span.glyphicon.glyphicon-chevron-up
                    .delta
                      span {{ indicadores.Kpi.EPA.Delta }}%

            // kpi: tmo
            .col-md-3
              .kaizen-box.kaizen-kpi.ok.h-level-2
                .kaizen-box-name
                  .glyphicon-kpi
                    span.glyphicon.glyphicon-asterisk
                  span.uppercase TMO
                  .glyphicon-kpi.right-info
                    button.glyphicon.glyphicon-info-sign(popover-animation='true', popover='{{ indicadores.Kpi.TMO }}')
                .kpi.kaizen-box-content
                  .weighted.text-right
                    span.normal-size {{ indicadores.Kpi.TMO }}
                    | <small> seg</small>

        // level 2

        // habilidades
        .col-lg-4
          .kaizen-box.kaizen-skills.h-level-3
            .kaizen-box-name.big-size
              .glyphicon-kpi
                span.glyphicon.glyphicon-asterisk
              span.uppercase Habilidades
            .skills.kaizen-box-content
              .col-xs-12.skill
                .each
                  .col-xs-6
                    .info
                      a(href='habilidades/') Habilidad I
                      span.weighted 80%
                  .col-xs-3
                    .arrow.positive
                      .glyphicon-kpi
                        span.glyphicon.glyphicon-chevron-up
                    .delta
                      span 2.3%
                  .col-xs-3
                    .position
                      span 1
              .col-xs-12.skill
                .each
                  .col-xs-6
                    .info
                      a(href='habilidades/') Habilidad II
                      span.weighted 76.2%
                  .col-xs-3
                    .arrow.positive
                      .glyphicon-kpi
                        span.glyphicon.glyphicon-chevron-up
                    .delta
                      span 0.9%
                  .col-xs-3
                    .position
                      span 2
              .col-xs-12.skill
                .each
                  .col-xs-6
                    .info
                      a(href='habilidades/') Habilidad III
                      span.weighted 74.1%
                  .col-xs-3
                    .arrow.positive
                      .glyphicon-kpi
                        span.glyphicon.glyphicon-chevron-up
                    .delta
                      span 1.2%
                  .col-xs-3
                    .position
                      span 3


        // level 4

        // history
        .col-lg-8
          .kaizen-box.kaizen-history.h-level-3
            .kaizen-box-name
              .glyphicon-kpi
                span.glyphicon.glyphicon-asterisk
              span.uppercase Históricos Total
            .kaizen-box-content
              metricsgeneral.text-left(width='690', height='240')
              .legend

        // ranking
        .col-lg-4
          .kaizen-box.kaizen-ranking.h-level-3
            .kaizen-box-name.big-size
              .glyphicon-kpi
                span.glyphicon.glyphicon-asterisk
              span.uppercase Ranking
            .ranking.kaizen-box-content
              .col-xs-12.rank(ng-repeat='rank in ranking')
                .each
                  .col-xs-6
                    .info
                      a(href='indicadores/{{ rank.Id | lowercase }}') {{ rank.Id }}
                      span.weighted {{ rank.Ponderado }}
                  .col-xs-3
                    .arrow.positive(ng-if='rank.Id != "SCCP"')
                      .glyphicon-kpi
                        span.glyphicon.glyphicon-chevron-up
                    .arrow.negative(ng-if='rank.Id == "SCCP"')
                      .glyphicon-kpi
                        span.glyphicon.glyphicon-chevron-down
                    .delta
                      span {{ rank.Delta }}%
                  .col-xs-3
                    .position
                      span {{ rank.Posicion }}

script.
  $("#menu-toggle").click(function(e) {
  e.preventDefault();
  $("#wrapper").toggleClass("toggled");
  });



