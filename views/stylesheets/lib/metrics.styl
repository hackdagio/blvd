metrics-1-color = primary-color-2
metrics-2-color = primary-color-1
metrics-3-color = rgb(255,0,0)
metrics-4-color = rgb(0,100,0)
metrics-5-color = rgb(92,92,92)

.area1-color
  fill metrics-1-color
.area2-color
  fill metrics-2-color
.area3-color
  fill metrics-3-color
.area4-color
  fill metrics-4-color
.area5-color
  fill metrics-5-color

.barplot
  rect
    &.bar
      shape-rendering crispEdges
      fill #b6b6fc
      &.active
        fill #9e9efc

.baselines
  line
    opacity 0.2
    shape-rendering crispEdges
    stroke black
    stroke-width 1
  text
    fill black
    font-size 9px
    opacity 0.5
    stroke none

.btn-group
  display inline-block
  margin-left 3px
  margin-right 3px
  span
    &.which-button
      font-weight 300
      color darkgray
    &.title
      margin-left 8px
      margin-right 8px

.chart_title
  cursor default
  font-size 22px
  padding-top 8px
  text-align center
  .popover
    font-size 12px
    &.top
      margin-top 0
  .popover-content
    cursor auto
    line-height 17px
  .fa
    color #ccc
    font-size 14px
    padding-left 4px
    vertical-align top
    &.warning
      font-weight 300

circle
  opacity 0.85
  &.points-mono
    fill #0000ff
    stroke #0000ff

#description
  margin auto
  margin-bottom 50px
  width 100%

.divider
  color #000000
  opacity 0.2

.extended-y-ticks
  svg
    .y-axis
      line
        opacity 0.07

.extended-x-ticks
  svg
    .x-axis
      line
        opacity 0.1

.histogram .axis path,
.histogram .axis line
  opacity 0.7
  fill none
  shape-rendering crispEdges
  stroke #ccc

.histogram
  .bar
    rect
      shape-rendering crispEdges
      fill #b6b6fc
      &.active
        fill #9e9efc

.least-squares-line
  stroke-width 1
  stroke red

.lowess-line
  stroke red
  fill none

.line1-color
  stroke metrics-1-color
  stroke-width 2!important
.line2-color
  stroke metrics-2-color
.line3-color
  stroke metrics-3-color
.line4-color
  stroke metrics-4-color
.line5-color
  stroke metrics-5-color
  
.line1-legend-color
  color metrics-1-color
  font-size 120%
.line2-legend-color
  color metrics-2-color
.line3-legend-color
  color metrics-3-color
.line4-legend-color
  color metrics-4-color
.line5-legend-color
  color metrics-5-color
  
.legend
  font-size .8em
  padding 25px 0 15px 0

.main-area-solid
  svg
    .main-area
      fill #ccccff
      opacity 1

.markers
  line
    opacity 0.2
    shape-rendering crispEdges
    stroke black
    stroke-width 1
  text
    fill black
    font-size 9px
    opacity 0.5
    stroke none

.missing
  background-repeat no-repeat
  background-position center center
  background-size 90% 90%

.missing-pane
  fill none

path
  &.main-area
    opacity 0.2
    stroke none
  &.confidence-band
    fill #ccc
    opacity 0.4
    stroke none
  &.main-line
    fill none
    opacity 0.8
    stroke-width 1.1px

.points
  circle
    fill-opacity 0.4
    stroke-opacity 1
    &.selected
      fill-opacity 1
      stroke-opacity 1

text
  fill primary-color-1

#torso
  margin 0 auto
  text-align center
  width 100%
  div
    display inline-block

#trunk
  margin-top 40px
  h2
    font-size 15px
    &.trunk-title
      font-size 25px
      font-weight 300
      text-transform uppercase

.trunk-section
  border-top 1px solid #ccc
  padding-bottom 25px
  padding-top 15px

.voronoi
  path
    fill none
    pointer-events all
    stroke none
    stroke-opacity 0.1

.x-rug-mono,
.y-rug-mono
  stroke black

.x-axis line,
.y-axis line
  opacity 0.3
  shape-rendering crispEdges
  stroke primary-color-1
  stroke-width 1

.x-axis text,
.y-axis text,
.histogram .axis text
  fill primary-color-1
  font-size 12px
  opacity 1

.x-axis .label,
.y-axis .label,
.axis .label
  font-size 10px
  text-transform uppercase
  font-weight 400

.x-axis-small text,
.y-axis-small text,
.active-datapoint-small
  font-size 8px

.x-axis-small .label,
.y-axis-small .label
  font-size 8.5px

.year-marker
  text
    fill primary-color-1
    font-size 10px
    opacity 1
  line
    shape-rendering crispEdges
    opacity 0.2
    stroke black
    stroke-width 1

.year-marker-small
  text
    font-size 8px

