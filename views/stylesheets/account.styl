kaizen-user-wrapper-principal-size = 300
kaizen-user-wrapper-sidebar-background-color = white
kaizen-user-config-standard-color = rgb(36, 38, 40)

.kaizen-user-wrapper
  transition all 0.5s ease
  &.toggled
    padding-left (kaizen-user-wrapper-principal-size)px
    .kaizen-user-wrapper-sidebar
      width (kaizen-user-wrapper-principal-size)px
    .kaizen-user-wrapper-content
      position absolute
      margin-right -(kaizen-user-wrapper-principal-size)px
      @media(min-width:768px)
        position relative
        margin-right 0
    @media(min-width:768px)
      padding-left 0
  @media(min-width:768px)
    padding-left (kaizen-user-wrapper-principal-size)px

.kaizen-user-wrapper-sidebar
  z-index 1000
  position fixed
  left (kaizen-user-wrapper-principal-size)px
  width (kaizen-user-wrapper-principal-size)px
  height 100%
  margin-left -(kaizen-user-wrapper-principal-size)px
  background kaizen-user-wrapper-sidebar-background-color
  transition all 0.5s ease
  margin-top -20px //
  @media(max-width:767px)
    width (kaizen-user-wrapper-principal-size/2.5)px
  
  .sidebar-nav
    position absolute
    width 100%
    top 0
    margin 0
    padding 0
    list-style none
    li
      width 100%
      padding 15px 0 15px 30px
      border-bottom rgb(237, 236, 228) 1px solid
      background kaizen-user-wrapper-sidebar-background-color
      span, a
        text-decoration none
        color rgb(170, 169, 162)
        font-size 1em
        font-weight 300
        &:hover
          text-decoration none
      a
        margin-left 15px
      &:last-child
        border-bottom none
    .active
      background body-background-color
      span, a
        color kaizen-user-config-standard-color
        font-weight 400
    img
      width 50%
  .sidebar-nav li a:active,
  .sidebar-nav li a:focus
    text-decoration none

.kaizen-user-wrapper-content
  width 100%
  position absolute
  padding 15px
  @media(min-width:768px)
    padding 20px
    position relative

.kaizen-user-box
  h1
    font-size 2em
    font-weight 300
    color kaizen-user-config-standard-color
  h3
    font-size 1.56em
    letter-spacing -1px
    font-weight 300
    color lighten(kaizen-user-config-standard-color, 10%)
  form
    margin-top 30px
    .form-group
      position relative
      margin-bottom 1.6em
      width 100%
      max-width 500px
    label
      display block
      color rgb(36, 38, 40)
      font-size 0.9em
      font-weight 400
      margin-bottom 10px
    input
      border 1px solid rgb(224, 223, 215)
      border-radius 0
      box-shadow none
    button
      font-size 0.8em
      font-weight 300